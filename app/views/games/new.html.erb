<div class="container text-center">
  <h1>Logest Word Game</h1>
  <h2><%= session[:score] %> Points</h2>
  <h2><%= session[:count] %> Round</h2>
  <div class="row">
    <% @letters.each do |letter| %>
      <div class="col-sm-1 btn btn-primary m-2">
        <h1><%=letter %></h1>
      </div>
    <% end %>
  </div>
  <form class="form-group" action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start, @stime %>
    <input class="form-control mt-4" type="text" name="word">
    <input class="btn btn-primary mt-4" type="submit" value="Send">
    <%= hidden_field_tag :end, Time.now %>
  </form>
</div>
